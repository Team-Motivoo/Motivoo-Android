<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_FFFFFF">

    <TextView
        android:id="@+id/tv_item_exercise_date"
        style="@style/B6_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingHorizontal="1dp"
        android:paddingVertical="5dp"
        android:textColor="@color/gray_600_707276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/exercise_date" />

    <ImageView
        android:id="@+id/iv_item_exercise_left_image"
        android:layout_width="0dp"
        android:src="@drawable/img_success_next_exercise"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/iv_item_exercise_right_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_exercise_date"/>

    <ImageView
        android:id="@+id/iv_item_exercise_right_image"
        android:layout_width="0dp"
        android:src="@drawable/img_success_next_exercise"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_exercise_left_image"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_exercise_left_image"
        app:layout_constraintTop_toTopOf="@id/iv_item_exercise_left_image"/>

    <TextView
        android:id="@+id/tv_item_exercise_img_bottom_txt_left"
        style="@style/B1_med"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="5dp"
        android:textColor="@color/gray_900_161616"
        app:layout_constraintEnd_toEndOf="@id/iv_item_exercise_left_image"
        app:layout_constraintStart_toStartOf="@id/iv_item_exercise_left_image"
        app:layout_constraintTop_toBottomOf="@id/iv_item_exercise_left_image"
        tools:text="@string/exercise_today_mission" />

    <TextView
        android:id="@+id/tv_item_exercise_img_bottom_txt_right"
        style="@style/B1_med"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="5dp"
        android:textColor="@color/gray_900_161616"
        app:layout_constraintEnd_toEndOf="@id/iv_item_exercise_right_image"
        app:layout_constraintStart_toStartOf="@id/iv_item_exercise_right_image"
        app:layout_constraintTop_toBottomOf="@id/iv_item_exercise_right_image"
        tools:text="@string/exercise_today_mission" />

    <TextView
        android:id="@+id/tv_item_exercise_my_exercise"
        style="@style/Caption2_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/shape_rectangle_radius24"
        android:backgroundTint="@color/gray_100_F4F5F9"
        android:paddingHorizontal="9dp"
        android:paddingVertical="7dp"
        android:text="@string/exercise_my_exercise"
        android:textColor="@color/gray_600_707276"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_item_exercise_left_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_exercise_img_bottom_txt_left" />

    <TextView
        android:id="@+id/tv_item_exercise_my_state"
        style="@style/Caption2_re"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape_rectangle_radius24"
        android:backgroundTint="@color/gray_100_F4F5F9"
        android:paddingHorizontal="8dp"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_600_707276"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_exercise_my_exercise"
        app:layout_constraintStart_toEndOf="@id/tv_item_exercise_my_exercise"
        app:layout_constraintTop_toTopOf="@id/tv_item_exercise_my_exercise"
        tools:text="진행중" />

    <TextView
        android:id="@+id/tv_item_exercise_parent_exercise"
        style="@style/Caption2_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_rectangle_radius24"
        android:backgroundTint="@color/gray_100_F4F5F9"
        android:paddingHorizontal="9dp"
        android:paddingVertical="7dp"
        android:text="@string/exercise_parent_exercise"
        android:textColor="@color/gray_600_707276"
        app:layout_constraintStart_toStartOf="@id/iv_item_exercise_right_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_exercise_img_bottom_txt_right" />

    <TextView
        android:id="@+id/tv_item_exercise_parent_state"
        style="@style/Caption2_re"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape_rectangle_radius24"
        android:backgroundTint="@color/gray_100_F4F5F9"
        android:paddingHorizontal="8dp"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_600_707276"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_exercise_parent_exercise"
        app:layout_constraintStart_toEndOf="@id/tv_item_exercise_parent_exercise"
        app:layout_constraintTop_toTopOf="@id/tv_item_exercise_parent_exercise"
        tools:text="성공" />


</androidx.constraintlayout.widget.ConstraintLayout>