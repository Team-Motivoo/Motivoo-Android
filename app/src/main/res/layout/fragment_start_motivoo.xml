<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_motivoo"
            style="@style/B5_med"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/selector_next_button_background"
            android:paddingVertical="18dp"
            android:stateListAnimator="@null"
            android:text="@string/onboarding_motivoo_start"
            android:textColor="@drawable/selector_text_color"
            app:layout_constraintBottom_toTopOf="@+id/btn_post_invite_code"
            app:layout_constraintEnd_toEndOf="@+id/btn_post_invite_code"
            app:layout_constraintStart_toStartOf="@+id/btn_post_invite_code" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_post_invite_code"
            style="@style/B5_med"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/shape_get_invite_code_radius8"
            android:paddingVertical="18dp"
            android:stateListAnimator="@null"
            android:text="@string/post_invite_code"
            android:textColor="@color/black_090909"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>